<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llHome"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:background="@drawable/ic_bghome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gambarHome"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/default_pic"
            android:background="@drawable/ic_bg_pic" />

        <TextView
            android:id="@+id/mandorHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/gambarHome"
            android:fontFamily="@font/lato_bold"
            android:text="Ilham"
            android:layout_marginTop="15dp"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/umurHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="25 thn"
            android:layout_weight="1"
            android:textAlignment="viewStart"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/profesiHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="Mandor"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>